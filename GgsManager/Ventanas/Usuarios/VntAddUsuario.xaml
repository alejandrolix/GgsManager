<Window x:Class="VntAddUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GgsManager"
        mc:Ignorable="d"
        Title="Añadir Usuario" Height="325" Width="483" Background="#f0f0f0"
        Loaded="Window_Loaded">
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="Etiquetas">
            <Setter Property="Margin" Value="0,20,0,0" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Height" Value="20" />
        </Style>

        <Style TargetType="TextBox" x:Key="TextBox">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="Height" Value="24" />
            <Setter Property="Width" Value="150" />
            <Setter Property="FontSize" Value="15" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="224*" />
            <ColumnDefinition Width="251*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60*" />
            <RowDefinition Height="67*" />
            <RowDefinition Height="68*" />
            <RowDefinition Height="91*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Text="Nombre" Style="{StaticResource Etiquetas}" />
        <TextBox Name="NombreUsuTxt" Grid.Column="1" Grid.Row="0" Text="{Binding Nombre}" Style="{StaticResource TextBox}" />
        <TextBlock Grid.Column="0" Grid.Row="1" Text="Contraseña" Style="{StaticResource Etiquetas}" />
        <PasswordBox Name="PasswordUsuPb" PasswordChar="*" Grid.Column="1" Grid.Row="1" Width="150" Height="24" HorizontalAlignment="Left" VerticalAlignment="Bottom" />
        <TextBlock Grid.Column="0" Grid.Row="2" Text="¿Es Gestor?" Style="{StaticResource Etiquetas}" />
        <CheckBox Name="EsGestorUsuChk" Grid.Column="1" Grid.Row="2" IsChecked="{Binding EsGestorB}" VerticalAlignment="Bottom" Height="13" />
        <Button Name="GuardarUsuBtn" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Width="80" Height="30" Content="Aceptar" HorizontalAlignment="Center" FontSize="15" Click="GuardarUsuBtn_Click" Margin="0,16,0,0" />
    </Grid>
</Window>
